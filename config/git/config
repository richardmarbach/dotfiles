[user]
  name = Richard Marbach
  email = rmarbach@gmail.com
[color]
  ui = auto
[alias]
  st = status
  ci = commit --verbose
  co = checkout
  amend = commit --amend
  aa = add --all
  dh1 = diff HEAD~1
  aci = !git aa && git ci

  delete-branches = "!fish -c 'git-delete-branches'"

  unstage = reset --

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   ra = recent commits, all reachable refs
  #   l = all commits, only current branch
  #   la = all commits, all reachable refs
  #   b = all branches
  #   bs = all branches, sorted by last commit date
  head = !git r -1
  h = !git head
  hp = "!. ~/.config/git/helpers && show_git_head"
  r = !GIT_NO_PAGER=1 git l -30
  ra = !git r --all
  l = "!. ~/.config/git/helpers && pretty_git_log"
  la = !git l --all
  b = "!. ~/.config/git/helpers && pretty_git_branch"
  bs = "!. ~/.config/git/helpers && pretty_git_branch_sorted"
[core]
  editor = nvim
  pager = delta
  log = delta
  reflow = delta
  show = delta
[delta]
  side-by-side = true
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  syntax-theme = Monokai Extended
  navigate = true
[interactive]
  diffFilter = delta --color-only
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
	keepBackup = false
[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[difftool]
  prompt = false
[diff]
  tool = vimdiff
[init]
  defaultBranch = main
